<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.BirthNameFragment"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:textStyle="normal"
        android:textFontWeight="400"
        android:textColor="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18.5dp"
        />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textStyle="normal"
        android:textFontWeight="400"
        android:textColor="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="21dp"
        />

    <View
        android:id="@+id/view_progress_bar_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EB5F2A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        />

    <ImageView
        android:id="@+id/iv_progress_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_progress_ball"
        app:layout_constraintStart_toStartOf="@id/view_progress_bar_1"
        app:layout_constraintEnd_toEndOf="@id/view_progress_bar_1"
        app:layout_constraintTop_toTopOf="@id/view_progress_bar_1"
        app:layout_constraintBottom_toBottomOf="@id/view_progress_bar_1"/>

    <TextView
        android:id="@+id/tv_progress_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/pretendard700"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="@id/iv_progress_ball"
        app:layout_constraintEnd_toEndOf="@id/iv_progress_ball"
        app:layout_constraintTop_toTopOf="@id/iv_progress_ball"
        app:layout_constraintBottom_toBottomOf="@id/iv_progress_ball"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_baby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아기의 태명을\n알려주세요."
        android:fontFamily="@font/pretendard700"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"/>

    <TextView
        android:id="@+id/tv_nice_to_meet_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만나게 되어 반가워요!"
        android:textColor="#797979"
        android:fontFamily="@font/pretendard500"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_baby_name"
        app:layout_constraintTop_toBottomOf="@id/tv_baby_name"
        android:layout_marginTop="6dp"
        />

    <ImageView
        android:id="@+id/btn_name_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancle_btn"
        app:layout_constraintEnd_toEndOf="@id/view_input"
        app:layout_constraintBottom_toTopOf="@id/view_input"
        android:layout_marginBottom="5dp"
        />

    <View
        android:id="@+id/view_input"
        android:layout_width="300dp"
        android:layout_height="1.5dp"
        android:background="#797979"
        app:layout_constraintStart_toStartOf="@id/tv_baby_name"
        android:layout_marginStart="2dp"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        android:layout_marginEnd="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nice_to_meet_you"
        android:layout_marginTop="55dp"
        />

    <EditText
        android:id="@+id/et_birth_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/view_input"
        app:layout_constraintBottom_toTopOf="@id/view_input"
        android:gravity="left"/>

</androidx.constraintlayout.widget.ConstraintLayout>